<body>

  <h1>ðŸ§¸ Dua's Menu</h1>

  <div id="meal-container"></div>

  <h2>Summary</h2>
  <textarea id="summary" readonly>ðŸ§¸ Dua's menu</textarea><br/>
  <button onclick="copySummary()">Copy Summary</button>

  <script>
    const meals = ["9 AM", "11 AM", "1 PM", "3 PM", "5 PM", "7 PM"];
    const foods = [
      "Apple Smoothie", "Apple & Blackberry Smoothie", "Dosa/Idli", "Chicken",
      "Banana & Nuts with Milk", "Ragi", "Strawberries", "Strawberries with Yogurt",
      "Fish", "Fish & Sweet Potato", "Egg and Cheese", "Orange Juice", "Rice"
    ];

    const selections = {};
    const mealContainer = document.getElementById('meal-container');
    const summaryBox = document.getElementById('summary');

    meals.forEach(time => {
      const card = document.createElement('div');
      card.className = 'meal-card';
      card.innerHTML = `
        <h3>${time}</h3>
        <select onchange="handleSelection('${time}', this.value)">
          <option value="">Select Food</option>
          ${foods.map(food => `<option value="${food}">${food}</option>`).join('')}
        </select>
      `;
      mealContainer.appendChild(card);
    });

    window.handleSelection = function(time, food) {
      selections[time] = food;
      updateSummary();
    };

    function updateSummary() {
      let summary = "ðŸ§¸ Dua's menu\n";
      meals.forEach(time => {
        summary += `${time}: ${selections[time] || 'Not Selected'}\n`;
      });
      summaryBox.value = summary.trim();
    }

    function copySummary() {
      summaryBox.select();
      document.execCommand('copy');
      alert('Summary copied to clipboard!');
    }
  </script>

</body>
